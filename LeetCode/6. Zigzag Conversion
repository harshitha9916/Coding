class Solution {
    public String convert(String s, int numRows) {
        
        if(numRows ==1) return s;
        
        String res="";
        
        for(int i=0;i<numRows;i++){
            
            int inc = 2*(numRows-1);
            for(int j = i;j<s.length();j = j+inc){
                res += s.charAt(j);
                if(i>0 && i<numRows-1 &&  (j + inc-(2*i)) < s.length() ){
                    res+=s.charAt(j+inc-(2*i));
                }
            }
        }
        return res;
        
    }
}
